@model IEnumerable<RadverleihLib.Fortbewegungsmittel>

@{
    ViewBag.Title = "Index";
}

<h2>Meine Fahrzeuge</h2>

<p>
    @Html.ActionLink("Neues Fahrzeug erstellen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nummer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Alter)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rückgabedatum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kunde.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modell.Bezeichnung)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ablage.Bezeichnung)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nummer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Alter)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rückgabedatum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kunde.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modell.Bezeichnung)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ablage.Bezeichnung)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })|
            @Html.ActionLink("Ausleihen", "Leihen", "Ausleihen", new { id = item.Id }, null)
        </td>
    </tr>
}

</table>
