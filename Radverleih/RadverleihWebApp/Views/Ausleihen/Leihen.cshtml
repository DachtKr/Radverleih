@model IEnumerable<RadverleihLib.Kunde>

@{
    ViewBag.Title = "Index";
}

<h2>Meine Kunden</h2>

<p>
    @Html.ActionLink("Neuen Kunden anlegen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vorname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Strasse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stadt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Postleitzahl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.eMail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vorname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Strasse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stadt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Postleitzahl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.eMail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.ActionLink("Auswählen", "Ausleihen", new { kundeId = item.Id, fzgId = ViewBag.fortbewegungsmittel.Id })
            </td>
        </tr>
    }

</table>
